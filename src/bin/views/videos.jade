extends layout

block vars
    - var title = "Player two - Videos"

block content
    h1 Videos
    - for (var i in videos) {
        p(id='#{videos[i].name}') #{videos[i].name}
        video(width="750px", controls="true", onclick="this.play()", preload="none")
            source(src="#{videos[i].stat}",type="video/mp4")
            track(src="#{videos[i].vttSub}", kind="subtitle", srclang="en-US", label="English")
        a.btn.btn-success(href="#{videos[i].stat}") Download
    -}
    - if (processing.length) {
        h1 Processing
        - for (var i in videos) {
            div(id= '#{videos[i].name}')
        -}
    - }    
    
    include blocks/nav

block footer
block scripts
  script(type="text/javascript" src="/js/videos.js")